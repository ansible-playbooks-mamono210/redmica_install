#----------------------------------------------------
system_timezone: Asia/Tokyo

# ----------------------------------------------------------------------
# # システムのロケール
# #----------------------------------------------------
# locale_lang: ja_JP.UTF-8

# ----------------------------------------------------------------------
# データベース情報 (変更推奨)
#----------------------------------------------------
db_host: localhost
db_name: redmine
db_password: password
db_port: 5432
db_user: redmine
# ----------------------------------------------------------------------

#----------------------------------------------------
# Redmineのチェックアウト元URL
#----------------------------------------------------
redmica_git_url: https://github.com/redmica/redmica.git
redmica_git_version: master

#----------------------------------------------------
# RedMicaのデプロイ先ディレクトリ
#----------------------------------------------------
redmine_dir: /var/lib/redmine

#----------------------------------------------------
# RedMaiceのデプロイ先ディレクトリのオーナー:グループ
#----------------------------------------------------
redmine_dir_owner: apache
redmine_dir_group: apache

#----------------------------------------------------
# RedMicaで使用する日本語フォントファイル
#----------------------------------------------------
redmine_font_path: /usr/share/fonts/truetype/takao-gothic/TakaoPGothic.ttf

#----------------------------------------------------
# pg_hba.confのパス
#----------------------------------------------------
pg_hba_conf_path: /var/lib/pgsql/data/pg_hba.conf

#----------------------------------------------------
# ダウンロードするRubyのソースコード
#----------------------------------------------------
ruby_install_from_source: true
ruby_download_url: http://cache.ruby-lang.org/pub/ruby/3.1/ruby-3.1.4.tar.gz
