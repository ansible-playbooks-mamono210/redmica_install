#----------------------------------------------------
# Apacheの.htaccessを制御するファイル
#----------------------------------------------------
httpd_conf_confd: redmine.conf

#----------------------------------------------------
# Passengerをインストールする時SWAPを有効にするか
#----------------------------------------------------
passenger_swap: False

#----------------------------------------------------
# SELinuxの設定
#----------------------------------------------------
selinux_state: disabled

#----------------------------------------------------
# 作業用ディレクトリ
#----------------------------------------------------
work_dir: /tmp/redmine-install-dir
